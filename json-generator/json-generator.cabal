build-type:          Simple
extra-source-files:  CHANGELOG.md

common deps
  build-depends: base >=4.13 && <4.14,
                 containers,
                 bytestring,
                 utf8-string,
                 filepath,
                 aeson,
                 base16-bytestring,
                 cryptohash-sha1,
                 directory-tree,
                 split,
                 utf8-string,
                 directory,
                 regexpr,
                 cond

library Util
  import:              deps
  exposed-modules:     Util
  -- other-modules:
  other-extensions:    DeriveGeneric
  hs-source-dirs:      util
  default-language:    Haskell2010

library Lib
  import:              deps
  exposed-modules:     Lib
  -- other-modules:
  other-extensions:    DeriveGeneric
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       Util

executable json-generator
  import:              deps
  main-is:             Main.hs
  -- other-modules:
  other-extensions:    DeriveGeneric
  build-depends:       Lib
  hs-source-dirs:      exe
  default-language:    Haskell2010

test-suite json-generator-test
  import:              deps
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Test.hs
  -- other-modules:       Lib
  build-depends:       Lib, hspec, QuickCheck

executable image-copier
  import: deps
  main-is: Img.hs
  other-extensions:    DeriveGeneric
  build-depends:       Lib
  hs-source-dirs:      img-exe
  default-language:    Haskell2010